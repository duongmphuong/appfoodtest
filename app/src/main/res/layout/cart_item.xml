<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cart_layoutItem"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cart_itemLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintVertical_bias="0"
        android:background="@drawable/home_rcv2_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cart_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/cat1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cart_close"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ic_plus"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/cart_nameFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Burger bò nướng"
            android:textSize="20sp"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintBottom_toBottomOf="@+id/cart_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/cart_image"
            app:layout_constraintTop_toTopOf="@+id/cart_image" />

        <TextView
            android:id="@+id/cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="115.000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cart_image"
            app:layout_constraintTop_toBottomOf="@+id/cart_nameFood"
            app:layout_constraintVertical_bias="0.212" />

        <TextView
            android:id="@+id/cart_vnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:layout_marginLeft="5dp"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/cart_price"
            app:layout_constraintEnd_toEndOf="@+id/cart_nameFood"
            app:layout_constraintStart_toEndOf="@+id/cart_price"
            app:layout_constraintTop_toTopOf="@+id/cart_price" />

        <ImageView
            android:id="@+id/ic_plus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_plus"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cart_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginRight="10dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="@drawable/detail_background"
            app:layout_constraintBottom_toBottomOf="@+id/ic_plus"
            app:layout_constraintEnd_toStartOf="@+id/ic_plus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ic_plus" />

        <ImageView
            android:id="@+id/ic_minimus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_minus"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginRight="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cart_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>