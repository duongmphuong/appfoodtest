<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ItemRCV2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3AC5C9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:titleTextColor="@color/white" />

        <ImageView
            android:id="@+id/ic_backHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_back"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif"
            android:text="Quay lại trang chủ"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ic_backHome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/ic_backHome"
            app:layout_constraintTop_toTopOf="@+id/ic_backHome" />

        <ImageView
            android:id="@+id/item_rcv2_background"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/home_rcv2_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/item_rcv2_freeship"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_freeship"
            android:translationY="-35dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_rcv2_background"
            app:layout_constraintEnd_toEndOf="@+id/item_rcv2_background"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/item_rcv2_background"
            app:layout_constraintTop_toTopOf="@+id/item_rcv2_background"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Free"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationY="-15dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_rcv2_freeship"
            app:layout_constraintEnd_toEndOf="@+id/item_rcv2_freeship"
            app:layout_constraintStart_toStartOf="@+id/item_rcv2_freeship"
            app:layout_constraintTop_toTopOf="@+id/item_rcv2_freeship"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Ship"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationY="-15dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_rcv2_freeship"
            app:layout_constraintEnd_toEndOf="@+id/item_rcv2_freeship"
            app:layout_constraintStart_toStartOf="@+id/item_rcv2_freeship"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintVertical_bias="0" />

        <ImageView
            android:id="@+id/item_rcv2_imageFood"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cat1"
            app:layout_constraintBottom_toBottomOf="@+id/item_rcv2_background"
            app:layout_constraintEnd_toEndOf="@+id/item_rcv2_background"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="@+id/item_rcv2_background"
            app:layout_constraintTop_toTopOf="@+id/item_rcv2_background" />

        <TextView
            android:id="@+id/item_rcv2_nameFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:text="Burger bò nướng"
            android:textColor="#777777"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/item_rcv2_background"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_rcv2_background"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/item_rcv2_nameDetail"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Burger bò nướng rất ngon, Burger bò nướng rất ngon"
            android:textColor="#999999"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/ic_rcv2_minus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/item_rcv2_nameFood"
            app:layout_constraintTop_toBottomOf="@+id/item_rcv2_nameFood"
            app:layout_constraintVertical_bias="0" />

        <ImageView
            android:id="@+id/ic_rcv2_plus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_plus"
            app:layout_constraintBottom_toBottomOf="@+id/ic_rcv2_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/ic_rcv2_number"
            app:layout_constraintTop_toTopOf="@+id/ic_rcv2_number" />

        <TextView
            android:id="@+id/ic_rcv2_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/home_rcv2_background"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="9"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/ic_rcv2_minus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/ic_rcv2_minus"
            app:layout_constraintTop_toTopOf="@+id/ic_rcv2_minus" />

        <ImageView
            android:id="@+id/ic_rcv2_minus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_minus"
            app:layout_constraintBottom_toTopOf="@+id/btn_rcv2_addCart"
            app:layout_constraintEnd_toEndOf="@+id/btn_rcv2_addCart"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/btn_rcv2_addCart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1" />

        <Button
            android:id="@+id/btn_rcv2_addCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_color"
            android:text="Thêm vào giỏ hàng"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.9" />

        <TextView
            android:id="@+id/item_rcv2_vnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VND"
            android:textColor="#999999"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/ic_rcv2_plus"
            app:layout_constraintEnd_toEndOf="@+id/btn_rcv2_addCart"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ic_rcv2_plus"
            app:layout_constraintVertical_bias="1" />

        <TextView
            android:id="@+id/item_rcv2_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="307.000"
            android:textColor="#999999"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_rcv2_vnd"
            app:layout_constraintEnd_toStartOf="@+id/item_rcv2_vnd"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/ic_rcv2_plus"
            app:layout_constraintTop_toTopOf="@+id/item_rcv2_vnd" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>