<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/admin_item_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_rcv_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/detail_itemselect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/admin_item_nameFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Burger Bò Nướng"
            android:textColor="#888888"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/admin_item_detail"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Rất ngon"
            android:layout_marginTop="5dp"
            android:textColor="#888888"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/admin_item_nameFood"
            app:layout_constraintTop_toBottomOf="@+id/admin_item_nameFood" />


        <TextView
            android:id="@+id/admin_item_priceFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="115.000"
            android:textColor="#888888"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/admin_item_detail"
            app:layout_constraintStart_toStartOf="@+id/admin_item_detail"
            app:layout_constraintTop_toBottomOf="@+id/admin_item_detail" />


        <TextView
            android:id="@+id/admin_item_vnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VND"
            android:textColor="#888888"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="@+id/admin_item_priceFood"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/admin_item_priceFood"
            app:layout_constraintTop_toTopOf="@+id/admin_item_priceFood" />

        <ImageView
            android:id="@+id/admin_imageFoodd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/cat1"
            android:layout_marginRight="10dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>